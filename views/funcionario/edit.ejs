<%- include ('../partials/head.partials.ejs') %>

    <body>
        <!-- Sidenav -->
        <%- include ('../partials/menus.partials.ejs') %>
            <!-- Main content -->
            <div class="main-content">
                <!-- Top navbar -->
                <%- include ('../partials/navbar.partials.ejs') %>
                    <!-- Header -->
                    <div class="header bg-gradient-primary py-5 pt-md-8">
                        <div class="container-fluid">
                            <div class="header-body">
                                <!-- Card stats -->
                                <div class="row">
                                    <!--Curso-->
                                    <div class="col-xl-3 col-lg-6">
                                        <div class="card card-stats mb-4 mb-xl-0">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Cursos</h5>

                                                    </div>
                                                    <div class="col-auto">
                                                        <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                                            <i class="fas fa-chart-bar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <p class="mt-3 mb-0 text-muted text-sm">
                                                    <a href="/sistema/funcionario"> <i class="fas fa-plus mr-2"></i>Cadastrar

                                                    </a>
                                                </p>
                                            </div>
                                        </div>


                                    </div>




                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/curso/update">
                            <h4 class="heading-small text-muted mb-4">Edição de Cursos</h4>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-email">Nome</label>
                                            <input type="text" id="input-email" name="nome" class="form-control form-control-alternative" value="<%=curso.nome%>" placeholder="Descrição">

                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-email">Sigla</label>
                                            <input type="text" id="input-email" name="nome" class="form-control form-control-alternative" value="<%=curso.sigla%>" placeholder="Descrição">

                                        </div>
                                    </div>


                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-email">Codigo</label>
                                            <input type="text" id="input-email" name="nome" class="form-control form-control-alternative" value="<%=curso.codigo%>" placeholder="Descrição">

                                        </div>
                                    </div>

                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <br>
                                            <button class=" btn btn-primary">Atualizar</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <hr class="my-4">
                            <input type="hidden" name="id" value="<%=curso.id%>">
                        </form>
                    </div>
                    <!-- Page content -->

            </div>
    </body>
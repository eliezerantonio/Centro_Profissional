<%- include ('../partials/head.partials.ejs') %>

    <body>
        <!-- Sidenav -->
        <%- include ('../partials/menus.partials.ejs') %>
            <!-- Main content -->
            <div class="main-content">
                <!-- Top navbar -->
                <%- include ('../partials/navbar.partials.ejs') %>
                    <!-- Header -->
                    <div class="header bg-gradient-primary py-5 pt-md-8">
                        <div class="container-fluid">
                            <div class="header-body">
                                <!-- Card stats -->
                                <div class="row">
                                    <!--Curso-->
                                    <div class="col-xl-3 col-lg-6">
                                        <div class="card card-stats mb-4 mb-xl-0">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Turmas</h5>
                                                        <span class="h2 font-weight-bold mb-0"><%=turmas.length%></span>
                                                    </div>
                                                    <div class="col-auto">
                                                        <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                                            <i class="fas fa-chart-bar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <p class="mt-3 mb-0 text-muted text-sm">
                                                    <a href="#" data-toggle="modal" data-target="#modalCadastrarCurso"> <i class="fas fa-plus mr-2"></i>Cadastrar</a>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="modal fade" id="modalCadastrarCurso" tabindex="-1" role="dialog" aria-labelledby="modalLabelCadastrarCurso" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="modalLabelCadastrarCurso">Cadastrar Turma</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form method="POST" action="/admin/turma/save">

                                                            <div class="form-group">
                                                                <label for="title-name" class="col-form-label ">Descrição:</label>
                                                                <input type="text" class="form-control " value name="descricao" id="title-name">
                                                                <% if(descricao_msg.length>0){ %>
                                                                    <div class="alert alert-danger ">
                                                                        <%=descricao_msg%>
                                                                    </div>
                                                                    <%}%>
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="description-text" class="col-form-label">Sala</label>
                                                                <input type="text" name="sala" class="form-control" id="title-name">
                                                                <% if(sala_msg.length>0){ %>
                                                                    <div class="alert alert-danger">
                                                                        <%=sala_msg%>
                                                                    </div>
                                                                    <%}%>
                                                            </div>

                                                    </div>
                                                    <div class="modal-footer ">
                                                        <button type="button " class="btn btn-secondary " data-dismiss="modal ">Fechar</button>
                                                        <button type="submit " class="btn btn-primary " btn-add-course>Cadastrar</button>
                                                    </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>




                                    </div>



                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Page content -->
                    <div class="container-fluid mt-5 ">

                        <div class="row mt-5 ">
                            <div class="col-12 mb-5 mb-xl-0 ">
                                <div class="card shadow ">
                                    <div class="card-header border-0 ">
                                        <div class="row align-items-center ">
                                            <div class="col ">
                                                <h3 class="mb-0 ">Turmas</h3>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="table-responsive ">
                                        <!-- Projects table -->
                                        <table class="table align-items-center table-flush table table-hover table-sm ">
                                            <thead class="thead-dark ">
                                                <tr class="animate-zoom ">
                                                    <th scope="col ">Nº</th>
                                                    <th scope="col ">Descrição da Turma</th>
                                                    <th scope="col ">Sala</th>

                                                    <th scope="col ">Opções</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% turmas.forEach(turma => { %>
                                                    <tr>
                                                        <td>
                                                            <%=turma.id%>
                                                        </td>
                                                        <td>
                                                            <%=turma.descricao%>
                                                        </td>
                                                        <td>
                                                            <%=turma.sala%>
                                                        </td>
                                                        <td>
                                                            <a href="/admin/turma/edit/<%=turma.id %> "> <i title="Editar" class="fas fa-edit ml-3 animate-zoom"></i></a>
                                                            <a href="/admin/turma/delete" name="id" data-toggle="modal" data-target="#modalEliminarCurso"> <i title="Eliminar " class="fas fa-trash ml-3 "></i></a>
                                                            <form action="/admin/turma/delete" method="POST">
                                                                <input type="hidden" name="id" value="<%=turma.id%>">

                                                                <!--Modal eliminar-->
                                                                <div class="modal fade" id="modalEliminarCurso" tabindex="-1" role="dialog" aria-labelledby="modalLabelEliminarCurso" aria-hidden="true">
                                                                    <div class="modal-dialog" role="document">
                                                                        <div class="modal-content">
                                                                            <div class="modal-header">

                                                                                <h3 class="modal-title" id="modalLabelEliminarCurso">

                                                                                    Tem certeza que pretende Eliminar ?


                                                                                </h3>
                                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
                                                                            </div>
                                                                            <div class="modal-body">




                                                                            </div>
                                                                            <div class="modal-footer ">
                                                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                                                                <form method="POST" action="/admin/turma/delete/">
                                                                                    <button type="submit " class="btn btn-danger" btn-add-course>Eliminar</button>
                                                                                </form>
                                                                            </div>

                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <!-- fim modal exluir -->

                                                            </form>




                                                        </td>
                                                    </tr>
                                                    <% }); %>


                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- Footer -->
                        <%- include ('../partials/footer.partials.ejs') %>
                    </div>
            </div>
    </body>
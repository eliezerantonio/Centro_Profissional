<%- include ('../partials/head.partials.ejs') %>

    <body>
        <!-- Sidenav -->
        <%- include ('../partials/menus.partials.ejs') %>
            <!-- Main content -->
            <div class="main-content">
                <!-- Top navbar -->
                <%- include ('../partials/navbar.partials.ejs') %>
                    <!-- Header -->
                    <div class="header bg-gradient-primary py-5 pt-md-8">
                        <div class="container-fluid">
                            <div class="header-body">
                                <!-- Card stats -->
                                <div class="row">
                                    <!--Curso-->
                                    <div class="col-xl-3 col-lg-6">
                                        <div class="card card-stats mb-4 mb-xl-0">
                                            <div class="card-body">
                                                <div class="row">
                                                    <div class="col">
                                                        <h5 class="card-title text-uppercase text-muted mb-0">Turmas</h5>

                                                    </div>
                                                    <div class="col-auto">
                                                        <div class="icon icon-shape bg-danger text-white rounded-circle shadow">
                                                            <i class="fas fa-chart-bar"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                                <p class="mt-3 mb-0 text-muted text-sm">
                                                    <a href="/admin/turma"> <i class="fas fa-plus mr-2"></i>Cadastrar

                                                    </a>
                                                </p>
                                            </div>
                                        </div>


                                    </div>




                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/admin/turma/update">
                            <h4 class="heading-small text-muted mb-4">Edição de Turma</h4>
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group focused">
                                            <label class="form-control-label" for="input-email">Descrição</label>
                                            <input type="text" id="input-email" name="descricao" class="form-control form-control-alternative" value="<%=turma.descricao%>" placeholder="Descrição">
                                            <% if(descricao_msg.length>0){ %>
                                                <div class="alert alert-danger">
                                                    <%=descricao_msg%>
                                                </div>
                                                <%}%>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-first-name">Sala</label>
                                            <input type="text" id="input-first-name" name="sala" class="form-control form-control-alternative" placeholder="Sala" value="<%=turma.sala%>">
                                            <% if(sala_msg.length>0){ %>
                                                <div class="alert alert-danger">
                                                    <%=sala_msg%>
                                                </div>
                                                <%}%>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-10">
                                        <div class="form-group focused">
                                            <input type="hidden" name="id" value="<%=turma.id%>">

                                        </div>
                                    </div>
                                    <class class="col-lg-2">
                                        <div class="form-group focused">
                                            <br>
                                            <button class=" btn btn-primary">Atualizar</button>
                                        </div>
                                    </class>
                                </div>
                            </div>
                    </div>
                    <hr class="my-4">

                    </form>
            </div>
            <!-- Page content -->

            </div>
    </body>